{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base",
      "group:all-dependencies"
    ],
    "packageRules": [
      {
        "matchPackageNames": ["python-*", "docker-*"],
        "updateTypes": ["major", "minor", "patch"]
      }
    ],
    "commitMessagePrefix": "[Renovate]",
    "groupName": "all-dependencies",
    "prCreation": "grouped",
    "labels": [
      {
        "packagePatterns": [
          "requirements.in",
          "requirements.txt",
          "Pipfile",
          "setup.py"
        ],
        "add": ["python"]
      },
      {
        "packagePatterns": [
          "Dockerfile",
          "docker-compose.yml"
        ],
        "add": ["docker"]
      },
      {
        "add": ["dependencies"]
      }
    ],
    "prTitle": "Update Dependencies"
  }